


<% unless @user.username == nil || @user.username == ""%>
<h1><%= @user.name %>'s Dashboard</h1>
<h1><%= @user.username %></h1>

<h1><%= @user.id %></h1>

<p><%= @user.name %></p>


<p><%= @user.email %></p>

<% if @user.auctions.any? %>
<h3>Auctions</h3>
<%= @user.auctions.each do |auction| %>
<%= link_to auction.name, auction_path(auction) %><br>
<% end%>
<% end%>

<% if @user.listings.any? %>
<h3>Listings</h3>
<%= @user.listings.each do |listing| %>
<%= link_to listing.title, listing_path(listing) %><br>
<% end%>
<% end%>

<% if @user.bids.any? %>
<h3>Bids</h3>
<%= @user.bids.each do |bid| %>
<p><%= link_to bid.display, bid_path(bid) %></p>
<% end%>
<% end%>

<%# if @user.items.any? %>
<!--<h3>Inventory</h3>-->
<%# @user.items.each do |item| %>
<%# link_to item.name, item_path(item) %>
<%# end%>
<%# end%>

<br><br>
<form action="/auctions/new" method="get">
    <input type="submit" value="Create Auction">
</form>
<form action="/listings/new" method="get">
    <input type="submit" value="Create Listing">
</form><br><br>

<% else%>
<h2>Please create a username to continue (this is what will be visible to other users)</h2>
<%= form_for(@user) do |f| %>
<%= f.label :username  %>
<%= f.text_field :username %><br><br>
<%= f.submit "Create Username" %>
<% end%>
<% end%>


